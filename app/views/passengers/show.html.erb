<h1>Passenger Info for: <%= @passenger.name %></h1>

<h3>Flights</h3>
<ol>
  <% @passenger.flights.each do |flight| %>
    <li>
      <p><%= link_to flight.number, "/flights/#{flight.id}" %></p>
    </li>
  <% end %>
</ol>
  <br>

<h2>Add New Flight</h2>
  <%= render partial: "partials/passengers_update", locals: { path: "/passengers/#{@passenger.id}/flights" } %>
